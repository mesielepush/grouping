<div class="group_show_back">
    
    <a  href= <%= groups_new_url%> >
        <img src="https://i.imgur.com/yFmVzKG.png" alt="uptitle" class='new_button'>
    </a>
    
    <div class="d-flex justify-content-center align-content-center">
        <div class=" groups_label_index_g text-center mb-5">
           
                <img src="https://i.imgur.com/mrFgPxb.png" alt="downtitle" class='down_title_groups  img-responsive'>
            
        </div>
    </div>

    <div id= 'content_grl'>
        <a href=<%= root_url %> class = 'home_button_groups'>
            <img src="https://bit.ly/39poQlf" alt="" class='img-responsive imagen_vote_show'>
        </a>
        
    </div>

    <div class='d-flex justify-content-center groups_scroll_show'>
        
        <ul class="ul_scroll_groups_index ">
            <% @groups.each do |group| %>
                <% if group.user_id != current_user.id%>
                
                    <a class = 'gral_link_for_group'href=<%= group_profile_url(group_id: group.id) %>>

                        <div class="card pb-5 unit_group">
                            <div class='photo_top_group_card'>
                                <img class="card-img-top " src=<%=group.imagen_url%>>
                                
                            </div>
            
                            
                            <div class="card-block text-center center_card_groups_index">
                                <div class="profile">
                                    <img class= 'rounded-circle img-fluid author_image' src=<%=User.find_by_id(group.user_id).gravatar%> alt="">
                                </div>
                                <h4 class="card-title mt-3 group_title_scroll"><%=group.name%></h4>
                                <div class="meta meta_card_relative">
                                    <h6 class='meta_card_group_index'><%=group.description%></h6>
                                    
                                </div>
                                <div class="card-text card-text_groups">
                                    Created by: <%=User.find_by_id(group.user_id).name%>
                                    <%if group %>
                                        <p>Last updated <%= group.votes.last.created_at %></p>
                                    <%end%>
                                </div>
                                    
                            </div>
                        </div>
                    </a>                   
                <%end%>
            <%end%>

        </ul>
    </div>
    <footer class="footer">
      <div class="container">
        <img src="https://i.imgur.com/Apw10z1.png" alt="downtitle" class='down_title_groups_demo  img-responsive'>
      </div>
    </footer>
    
    
</div>

<h1 class="site-heading text-center text-white d-lg-block">
    <span class="site-heading-upper text-primary mb-3" style="padding-top: 5rem;"><img src="https://i.imgur.com/wUzFVgH.png" alt="uptitle"></span>
    
</h1>


<div id="demo" class="carousel slide" data-ride="carousel">

    
    <div class="carousel-inner group_carrousel">
        <div class="carousel-item active d-flex justify-content-center align-items-center">
        </div>

        <% @groups.each do |group| %>
            
            <div class="carousel-item" style="padding-top: 15rem;">
                <div class = "d-flex justify-content-center align-items-center">
                    <div class="card  text-white group_back" style="width: 25rem; padding: 2rem;">
                        <img src= <%=group.imagen_url%> alt="group" class = "img-fluid img-thumbnail rounded-circle">
                        <div class="card-body">
                            <h5 class="card-title"><%=group.name%></h5>
                            <p class="card-text"><%=group.description%></p>
                            
                        </div>
                    </div>
                </div>      
            </div>
        <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>

<div class="group_show_back">
    <div class="container text-white d-lg-block">
        <div class="container group_photo">
        
            <div class = 'd-flex  justify-content-center align-center' >
                <img src=<%= @group.imagen_url%> alt="groupPhoto" class='group_foto rounded-circle img-responsive'>
            </div>

            <h1 class = 'group_name d-flex  justify-content-center align-center'>
                <%= @group.name%>
            </h1>
            
        </div>

    <div id="demo" class="carousel slide" data-ride="carousel">
       
        <div class="carousel-inner group_carrousel">
            <div class="carousel-item active d-flex justify-content-center align-items-center">
            </div>
            
            <% @group.each do |group| %>
                            
                <div class="carousel-item" style="padding-top: 5rem;">
                    <a href= <%= group_profile_path(id: group.id)%> >
                        <div class = "d-flex justify-content-center align-items-center">
                            <div class="card  text-white group_back" style="width: 25rem; padding: 2rem;">
                                <img src= <%=group.imagen_url%> alt="group" class = "img-fluid img-thumbnail rounded-circle">
                                <div class="card-body">
                                    <h5 class="card-title title_group text-center"><%=group.name%></h5>
                                    <p class="card-text text-center description_group"><%=group.description%></p>
                                    
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                
            <% end %>
            
        </div>



    </div>
</div>

   
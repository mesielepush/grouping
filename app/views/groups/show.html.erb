<div class="my_votes_stats_background d-flex justify-content-center">
</div>


<div class="group_stats_gral">
    <img class="card-img-top_show_group img-fluid" src=<%= @group.imagen_url%> alt="Group image">
    <div class="d-flex justify-content-center ">
        
        <div class="card group_my_votes justify-content-center">
            
            <div class="card-body info_group_my_votes">
                <h5 class="card-title title_group text-center"><%=@group.name%></h5>
                <p class="card-text my_group_description" > <%=@group.description%> </p>
            </div>
        </div>
    </div>
</div>

<div class='d-flex justify-content-center'>

        <div>
            
            <div class="my_votes_demand_list_index_group ">
                <div class="demands_list_my_votes_group ">
                    <ul class="list-group">
                        <% @group.votes.each do |demand| %>
                            <a href=<%= vote_url(votes_id: demand.id) %>>
                                <li class="list-group-item d-flex justify-content-between align-items-center demand_my_votes_item mb-1">
                                    <%=demand.name%>
                                    <span class="badge badge-success badge-pill counter_for_demand_list">
                                        <%=demand.counter%>
                                    </span>
                                </li>
                            </a>
                            
                        <%end%>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="foot_buttons d-flex justify-content-around">
                
        <div>
            <a href=<%= groups_url %> class = 'back_button_index_groups'>
                <img src="https://i.imgur.com/BEcgpsg.png" alt="" class='img-fluid imagen_vote_show'>
            </a>
            
        </div>
        
    </div>
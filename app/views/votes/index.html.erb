<div class="demand_index">
    <h1 class=" text-center text-white d-lg-block">
        <span class="text-primary mb-3" ><img src="https://i.imgur.com/yd5PavD.png" alt="uptitle" class='site-heading-upper'></span>
    </h1>
</div>

<div id="demo" class="carousel slide" data-ride="carousel">

    
    <div class="carousel-inner group_carrousel">
        <div class="carousel-item active  d-flex justify-content-center align-items-center" style="padding-top: 5rem;">
            <img src= <%= current_user.gravatar%> alt="group" class = "img-fluid img-thumbnail rounded-circle avatar" >
        </div>
        
        <% @demands.each do |demand| %>
                        
            <div class="carousel-item" style="padding-top: 5rem;">
                <a href= <%= demand_path(id: demand.id)%> >
                    <div class = "d-flex justify-content-center align-items-center">
                        <div class="card  text-white group_back" style="width: 45rem;padding:4rem;">
                            <img src= <%=demand.gravatar_url%> alt="demand" class = "img-fluid img-thumbnail rounded-circle avatar">
                            <div class="card-body">
                                <h5 class="card-title title_group text-center"><%=demand.name%></h5>
                                <p class="card-text text-center description_group"><%=demand.description%></p>
                                
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            
        <% end %>
        
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>
<div class='d-flex justify-content-center'>
        <a href=<%= root_url %> class = 'home_button'>
            <img src="https://bit.ly/39poQlf" alt="">
        </a>
        
    </div>
<div class="background_votes">
    <div class="name_header">
        <%=@vote.name%>
    </div>

    <div class="container demand">
        <div class="text-center demand_img">
            <img src= <%=@vote.gravatar_url%> alt="demand" class = "img-fluid img-thumbnail demand_img_avatar">
        </div>
        <h1 class= 'demand_description text-justify'>
            <%=@vote.description%>
        </h1>
    
    </div>

    <div class="demand_controls">
        <div class="demand_elements d-flex justify-content-around">
            <a href=<%= demand_update_url(vote:'down',votes_id: @vote.id)  %>>
                <img src= 'https://i.imgur.com/vRbv6wK.png' alt="demand" class = "img-fluid down_arrow">
            </a>
            <span class= 'demand_counter'><%=@vote.counter%></span>
            <a href=<%= demand_update_url(vote:'up',votes_id: @vote.id)  %>>
                <img src= 'https://i.imgur.com/SgIrwNL.png' alt="demand" class = "img-fluid up_arrow">
            </a>
            
        </div>
    </div>

    <div class="foot_icons d-flex justify-content-center mt-5">
        
        <div class='d-flex justify-content-center'>
                <a href=<%= root_url %> class = 'home_button'>
                    <img src="https://i.imgur.com/JcpkRZh.png" alt="" class='img-fluid imagen_vote_show'>
                </a>
        </div>
        <div class='d-flex justify-content-center '>
            <a href=<%=  groups_url %> class = 'groups_home_button'>
                <img src="https://i.imgur.com/xbEKtIa.png" alt="" class='img-fluid imagen_vote_show'>
            </a>
        </div>
        <div class='d-flex justify-content-center '>
            <a href=<%=  vote_stats_url(votes_id:@vote.id) %> class = 'demand_stats_button'>
                <img src="https://i.imgur.com/XQ0rn90.png" alt="" class='img-fluid imagen_vote_show'>
            </a>
        </div>
        <div class='d-flex justify-content-center '>
            <a href=<%=  demands_profile_url %> class = 'demands_list_link'>
                <img src="https://i.imgur.com/MRW2EsQ.png" alt="" class='img-fluid imagen_vote_show'>
            </a>
        </div>
    </div>
    
</div>


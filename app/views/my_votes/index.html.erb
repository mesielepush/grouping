<div class="my_votes_background d-flex justify-content-center">
    
</div>
<div class="container my_votes_items">

    <div class="d-flex justify-content-center align-content-center">
        <div class="my_votes_avatar text-center">
            <img src=<%= current_user.gravatar %> alt="User avatar" class = 'my_votes_avatar rounded-circle img-responsive'>
        </div>
        
    </div>
        
    <div class="d-flex justify-content-center align-content-center main_my_vote">
        <div class="my_votes_avatar text-center">
            <%= current_user.name %>
        </div>
    </div>
</div>


<div class="d-flex justify-content-center align-content-center">
    <div class="groups_label text-center">
        Groups
    </div>
</div>

<div id="demo" class="carousel slide groups_carousel" data-ride="carousel">
       
    <div class="carousel-inner">
        
        <div class="carousel-item active avatar_carousel d-flex justify-content-center align-items-center">
            <img src= <%= current_user.gravatar%> alt="group" class = " d-none img-fluid img-thumbnail rounded-circle avatar_group_my_votes">
        </div>
        
        <% current_user.groups.each do |group| %>
                        
            <div class="carousel-item pt-5" >
                <a href= <%= group_stats_path(group_id: group.id)%> >
                    <div class = "d-flex justify-content-center align-items-center">
                        <div class="text-white ">
                            <img src= <%=group.imagen_url%> alt="group" class = "img-fluid img-thumbnail rounded-circle group_foto_my_votes">
                            
                        </div>
                    </div>
                </a>
            </div>
            
        <% end %>
        
    </div>

        
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>

<div class="d-flex justify-content-center align-content-center">
    <div class=" text-center">
        <img src="https://bit.ly/2Trk7Kl" alt="groups" class='demands_label_my_votes'>
    </div>
</div>

<div id="demo" class="carousel slide votes_carousel" data-ride="carousel">
       
    <div class="carousel-inner">
        
        <div class="carousel-item active avatar_carousel d-flex justify-content-center align-items-center">
            <img src= <%= current_user.gravatar%> alt="group" class = " d-none img-fluid img-thumbnail rounded-circle avatar_group_my_votes">
        </div>
        
        <% current_user.votes.each do |demand| %>
                        
            <div class="carousel-item pt-5" >
                <a href= <%= vote_path(id: demand.id)%> >
                    <div class = "d-flex justify-content-center align-items-center">
                        <div class="text-white ">
                            <img src= <%=demand.gravatar_url%> alt="group" class = "img-fluid img-thumbnail rounded-circle group_foto_my_votes">
                            
                        </div>
                    </div>
                </a>
            </div>
            
        <% end %>
        
    </div>

        
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>
